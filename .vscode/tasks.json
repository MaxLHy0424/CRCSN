{
    "version":"2.0.0",
    "tasks":[
        {
            "label":"build",
            "type":"shell",
            "command":"make",
            "args":[
                "debug"
            ],
            "group":{
                "kind":"build",
                "isDefault":true
            },
            "presentation":{
                "echo":true,
                "reveal":"always",
                "focus":false,
                "panel":"shared"
            },
            "problemMatcher":"$gcc"
        },
        {
            "label":"run",
            "type":"shell",
            "dependsOn":"build",
            "command":"${workspaceFolder}/bin/__debug__.exe",
            "group":{
                "kind":"test",
                "isDefault":true
            },
            "presentation":{
                "echo":true,
                "reveal":"always",
                "focus":true,
                "panel":"shared"
            }
        }
    ]
}