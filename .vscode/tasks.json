{
    "version":"2.0.0",
    "tasks":[{
            "label":"build",
            "type":"shell",
            "command":"g++",
            "args":[
                "main.cpp",
                "-Ofast",
                "-Os",
                "-o",
                ".\\bin\\main.exe",
                "-g",
                "-Wextra",
                "-lm",
                "-static",
                "-fexec-charset=GBK",
                "-std=c++23"
            ],
            "group":{
                "kind":"build",
                "isDefault":true
            },
            "presentation":{
                "echo":true,
                "reveal":"always",
                "focus":false,
                "panel":"shared"
            },
            "problemMatcher":"$gcc"
        },
        {
            "label":"run",
            "type":"shell",
            "dependsOn":"build",
            "command":"${fileDirname}\\bin\\${fileBasenameNoExtension}.exe",
            "group":{
                "kind":"test",
                "isDefault":true
            },
            "presentation":{
                "echo":true,
                "reveal":"always",
                "focus":true,
                "panel":"shared"
            }
        }
    ]
}